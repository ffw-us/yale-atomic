{{ attach_library('atomic/tabs') }}

{% embed "@molecules/tabs/tabs.twig" %}
  {% block tab__label %}
    {% for key, tab in items %}
      {% include "@molecules/tabs/_tab-label.twig" with {
        tab__label: tab.content['#paragraph'].field_heading.value,
      } %}
    {% endfor %}
  {% endblock %}
  {% block tab__content__container %}
    {% for key, tab in items %}
      {% embed "@molecules/tabs/_tab-content.twig" with {
      } %}
        {% block tab__content %}
          {{ tab.content }}
        {% endblock %}
      {% endembed %}
    {% endfor %}
  {% endblock %}
{% endembed %}

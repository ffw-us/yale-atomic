{% set parentNode = paragraph.parentEntity.type.value.0['target_id'] %}

{% if parentNode == 'news' or parentNode == 'event' %}
  {% set content_image__width = "content" %}
  {% set content_image__alignment = "center" %}
{% else %}
  {% set content_image__width = "max" %}
  {% set content_image__alignment = "left" %}
{% endif %}

{% embed "@molecules/image/yds-content-image.twig" with {
  content_image__caption: content.field_text.0['#text'],
  content_image__width: content_image__width,
} %}
  {% block content_image__image %}
    {{ content.field_image }}
  {% endblock %}
{% endembed %}

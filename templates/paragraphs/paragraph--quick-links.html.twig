{% set parentNode = paragraph.parentEntity.type.value.0['target_id'] %}

{% if parentNode == 'post' or parentNode == 'event' and content.field_style_variation.0['#markup'] == 'subtle' %}
  {% set quick_links__width = "content" %}
  {% set quick_links__alignment = "center" %}
{% else %}
  {% set quick_links__width = "site" %}
  {% set quick_links__alignment = "left" %}
{% endif %}

{% embed "@molecules/quick-links/yds-quick-links.twig" with {
  quick_links__variation: content.field_style_variation.0['#markup'],
  quick_links__heading: content.field_heading.0['#text'],
  quick_links__description: content.field_text.0['#text'],
  quick_links__image: content.field_image.0,
  quick_links__links: content.field_links.0,
  quick_links__alignment: quick_links__alignment,
} %}
  {% block quick_links__links %}
    {{ content.field_links }}
  {% endblock %}
  {% block quick_links__image %}
    {{ content.field_image }}
  {% endblock %}
{% endembed %}

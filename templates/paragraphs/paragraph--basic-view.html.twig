{% set basic__view__base_class = 'basic-view' %}

{% set basic_view__attributes = {
  class: bem(basic__view__base_class),
} %}

{% embed "@organisms/component-wrapper/yds-component-wrapper.twig" with {
  component_width: 'site',
  component_wrapper__label: content.field_heading,
} %}
  {% block component_wrapper_inner %}
    <div {{ add_attributes(basic_view__attributes) }} data-embedded-components>
      {{ content.field_vb_params }}
    </div>
  {% endblock %}
{% endembed %}
